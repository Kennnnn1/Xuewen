<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/level"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Levels">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Communication"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/tele" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageView24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rec55" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="-70dp"
            android:text="Level 1"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="221dp"
            android:text="1/5"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageButton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec55" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="278dp"
            android:text="Level 2"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="278dp"
            android:text="Level 2"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="309dp"
            android:text="0/5"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageButton2"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rec55" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:text="Level 3"
            android:textSize="20dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/textxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView15"
            android:text="0/5"
            android:layout_marginLeft="40dp"
            android:textColor="@color/red"
           />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageButton3"
            android:background="@drawable/rec55"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/textxx"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:text="Level 4"
            android:textSize="20dp"
            android:textColor="@color/red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView17"
            android:text="0/5"
            android:layout_marginLeft="50dp"
            android:textColor="@color/red"/>

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_below="@id/imageButton4"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rec55"/>
        <TextView
            android:id="@+id/levle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 5"
            android:layout_below="@id/textView17"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/lol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/levle5"
            android:text="0/5"
            android:layout_marginLeft="50dp"
            android:textColor="@color/red"
            />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/putangina"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>