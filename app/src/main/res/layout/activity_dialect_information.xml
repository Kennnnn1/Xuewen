<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".dialect_information">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="390dp"
            android:layout_height="400dp"
            android:background="@drawable/grrr"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginLeft="90dp"
        android:textAlignment="center"
        android:text="Xuewen aims to develop a comprehensive mobile application dedicated to Mandarin learning. It is to create an accessible, engaging and effective platform for a wide range of learners." />

</LinearLayout>