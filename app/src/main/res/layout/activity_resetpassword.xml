<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgote"
    android:layout_gravity="center"
    tools:context=".resetpassword">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/pc"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/pp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic1"
            android:text="Reset Passowrd"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:layout_marginLeft="90dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the new password. The password"
            android:layout_below="@+id/pp2"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="must contain 8 characters"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@id/text3"
            android:layout_marginLeft="60dp"
            android:hint="******"
            android:inputType="textPassword"
            android:textStyle="italic"
            android:background="@drawable/corner"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:text="Reset Password"
            android:backgroundTint="@color/red"/>


    </RelativeLayout>

</LinearLayout>