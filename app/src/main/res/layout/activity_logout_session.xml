<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logout"
    tools:context=".LogoutSession">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Your Session has expired"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"/>

    <ImageView
        android:id="@+id/look"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/lockres"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you want to continue, please re-"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/look"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:id="@+id/texttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write your password."
        android:layout_below="@+id/text2"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@id/text3"
        android:layout_marginLeft="60dp"
        android:hint="******"
        android:inputType="textPassword"
        android:textStyle="italic"
        android:background="@drawable/corner"/>

    <Button
        android:id="@+id/logot"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:text="Log out all sessions"
        android:backgroundTint="@color/red"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/logot"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="Stay Logged in"
        android:backgroundTint="@color/yellosw"/>



</LinearLayout>