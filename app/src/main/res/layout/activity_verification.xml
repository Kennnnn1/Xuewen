<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/code"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/asteris"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/coo"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="120dp"
            android:text="Please Enter the code that has sent"/>

        <TextView
            android:id="@+id/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text12"
            android:layout_marginLeft="150dp"
            android:text="to your email"/>

        <TextView
            android:id="@+id/text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text13"
            android:text="code"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@id/text14"
            android:layout_marginLeft="80dp"
            android:hint="1234"
            android:textStyle="italic"
            android:background="@drawable/corner"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:text="Verify"
            android:backgroundTint="@color/red"/>



    </RelativeLayout>



</LinearLayout>